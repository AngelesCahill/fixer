<div class="container">
  <div class="row">
    <div class="col text-center">
      <h1>Bienvenido a la Zona Constructor</h1>
    </div>
  </div>

  <div class="card my-3 mx-5">
    <div class="row g-0">
      <div class="col-md-4">
        <%= image_tag "logo-fixer", class:"logo-body" %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">Quieres ser parte de este Equipo?</h5>
          <p class="card-text">Solo registrate como Constructor y ya estarás siendo parte de nuestro equipo y recibiendo proyectos para cotizar. Así de fácil!!!</p>
          <button type="button" class="btn btn-dark btn-lg">Registrarme</button>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="proyects">
    <table class="table table-hover mt-5">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nombre</th>
          <th scope="col">Apellido</th>
          <th scope="col">Región</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
      <% @proyects.each do |proyect| %>
        <tr>
        
            <td><%= proyect.id %></td>
            <td><%= proyect.name %></td>
            <td><%= proyect.lastname %></td>
            <td><%= proyect.region %></td>
            <td><%= link_to "Contactar", new_builder_path(@proyect) %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div> 

