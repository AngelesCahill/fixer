<%= form_with(model: payment) do |form| %>
  <% if payment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
        <% payment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-5 m-0 ">
    <img src="https://i.pinimg.com/originals/b6/3b/54/b63b54d4f0074710e9dd0f8e6d3c9fbd.jpg" style="width: 100px; height: 30px;">
    <select name="card" action="get" class="form-select p-0 ms-auto me-auto mt-2" aria-label="Default select example" style="width: 200px">
      <option selected>Seleccione su tarjeta</option>
      <option value="1">Visa</option>
      <option value="2">Master</option>
    </select>
  </div>

  <div>
    <%= form.label :number, style: "display: block", class:"mt-2" %>
    <%= form.number_field :number %>
  </div>

  <div>
    <%= form.label :expiration, style: "display: block", class:"mt-2"  %>
    <%= form.text_field :expiration %>
    <p>Formato fecha dd/mm/aa </p>
  </div>

  <div>
    <%= form.label :monto, style: "display: block", class:"mt-2"  %>
    <%= form.label :$6500 %>
  </div>

  <div>
    <%= form.label :proyect_id, style: "display: block", class:"mt-2"  %>
    <%= form.text_field :proyect_id, class:"mb-4" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
